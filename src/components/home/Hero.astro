<style lang="scss">
  @use "../../styles/config/variables" as *;
  @use "../../styles/config/mixins" as *;

  .hero-container {
    width: 100%;
    height: 85vh;
    padding: 2rem 4rem;
    display: flex;
    justify-content: center;
    background-color: white;
  }

  .hero-content {
    max-width: 90%;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 3rem;
  }

  .hero-left {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;

    .page-header {
      h1 {
        font-size: 3rem;
        line-height: 1.1;
        font-weight: 900;
        margin-top: 0;
        margin-bottom: 0.5rem;
        background: linear-gradient(135deg, #3cb56f, #60fca1);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
      }

      .subtitle {
        color: var(--paragraph-color);
        font-size: 1.25rem;
        font-weight: 600;
      }
    }

    .trust-badge {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      background: #e8f7ee;
      padding: 0.5rem 1rem;
      border-radius: 50px;
      width: fit-content;

      .icon {
        font-size: 0.9rem;
      }

      .text {
        color: #2ecc71;
        font-weight: 800;
        font-size: 0.75rem;
        letter-spacing: 0.05em;
      }
    }

    .description {
      font-size: 1.25rem;
      line-height: 1.6;
      color: #636e72;
      max-width: 100%;
      margin: 0;
    }
  }

  .hero-right {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;

    .image-placeholder {
      width: 100%;
      height: 100%;
      background: #f0f0f0;
      border-radius: 24px;
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 24px;
      }
    }
  }

  @include breakpoint-up($breakpoint-tablet) {
    .hero-content {
      flex-direction: row;
      text-align: left;
      gap: 4rem;
    }

    .hero-left {
      align-items: flex-start;

      .page-header h1 {
        font-size: 3.5rem;
      }

      .description {
        max-width: 540px;
      }
    }
  }

  @include breakpoint-up($breakpoint-desktop) {
    .hero-left {
      .page-header h1 {
        font-size: 4.5rem;
      }
    }
  }
</style>
