<style lang="scss">
  @use "../styles/config/variables" as *;
  @use "../styles/config/mixins" as *;

  .home-container {
    margin: 0 auto;
    padding: 0 1rem 5rem;
  }

  .hero-section {
    text-align: center;
    margin: 3rem 0;
  }

  .features-section {
    h3 {
      font-size: 1.5rem;
      text-align: center;
      margin: 3rem 0;
      color: var(--primary-color);
    }

    .features-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 2rem;
      margin-top: 1rem;
    }

    .feature {
      text-align: center;
      padding: 1.5rem;
      border-radius: 16px;
      background: rgba(255, 255, 255, 0.5);
      transition:
        transform 0.3s,
        box-shadow 0.3s;

      .feature-icon {
        font-size: 2rem;
        margin-bottom: 1rem;
      }

      h4 {
        margin-bottom: 0.5rem;
        color: var(--primary-color);
      }

      p {
        font-size: 1rem;
        color: var(--paragraph-color);
        line-height: 1.5;
      }
    }
  }

  @include breakpoint-up($breakpoint-tablet) {
    .glass-card {
      background: rgba(255, 255, 255, 0.8);
      backdrop-filter: blur(10px);
      border-radius: 24px;
      padding: 2.5rem;
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.05);
      border: 1px solid rgba(255, 255, 255, 0.3);
    }

    .home-container {
      max-width: 1200px;
    }

    .feature:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    }
  }
</style>
